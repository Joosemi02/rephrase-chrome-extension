{
  "manifest_version": 2,
  "name": "GPT Explain",
  "description": "This plugin allows you to select words or phrases to get an explanation generated by GPT-4.",
  "version": "1.0",
  "page_action": {
    "default_popup": "popup.html",
    "defaut_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "helpers.js",
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "contextMenus",
    "declarativeContent",
    "https://*.deepl.com/"
  ]
}