{
  "manifest_version": 3,
  "name": "GPT Explain",
  "description": "This plugin allows you to select words or phrases to get an explanation generated by GPT-4.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "declarativeContent",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "https://*.deepl.com/*"
  ]
}
